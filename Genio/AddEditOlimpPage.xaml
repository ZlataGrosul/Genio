<Page x:Class="Genio.AddEditOlimpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      Title="AddEditOlimpPage"
      Background="{StaticResource WindowBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <!-- Увеличиваем ширину для мероприятий -->
            <ColumnDefinition Width="*"/>
            <!-- Уменьшаем ширину для учащихся -->
        </Grid.ColumnDefinitions>

        <!-- ЗАГОЛОВКИ РАЗДЕЛОВ -->
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Мероприятие"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource LightTextColor}"
                   Margin="30,15,20,10"
                   HorizontalAlignment="Left"/>

        <TextBlock Grid.Row="0" Grid.Column="1"
                   Text="Учащиеся"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource LightTextColor}"
                   Margin="25,15,20,10"
                   HorizontalAlignment="Left"/>

        <!-- ЛЕВЫЙ ФРЕЙМ - РЕДАКТИРОВАНИЕ МЕРОПРИЯТИЯ -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="{StaticResource ReportFrameColor}"
                CornerRadius="8"
                Margin="20,0,10,15"
                Style="{StaticResource HoverFrameStyle}">
            <ScrollViewer x:Name="EventScrollViewer"
                          Style="{StaticResource CustomScrollViewerStyle}"
                          Padding="20,15">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- ДОБАВЛЕНО ПОЛЕ РЕЗУЛЬТАТА -->
                            <RowDefinition Height="Auto"/>
                            <!-- РЕЗУЛЬТАТ С КНОПКОЙ -->
                            <RowDefinition Height="Auto"/>
                            <!-- СПИСОК УЧАСТНИКОВ С РЕЗУЛЬТАТАМИ -->
                            <RowDefinition Height="Auto"/>
                            <!-- Номинации -->
                            <RowDefinition Height="Auto"/>
                            <!-- Место проведения -->
                        </Grid.RowDefinitions>

                        <!-- ДАТА -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Дата:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,15,15"/>

                        <Border Grid.Row="0" Grid.Column="1"
                                Background="{StaticResource MenuItemHoverColor}"
                                CornerRadius="8"
                                Height="35"
                                Margin="0,0,0,15">
                            <Grid>
                                <TextBox x:Name="EventDateTextBox"
                                         Background="{StaticResource MenuItemHoverColor}"
                                         Foreground="{StaticResource LightTextColor}"
                                         BorderThickness="0"
                                         Padding="12,0,35,0"
                                         VerticalAlignment="Center"
                                         FontSize="14"
                                         IsReadOnly="True"/>
                                <Button x:Name="EventDateButton"
                                        Style="{StaticResource DatePickerButtonStyle}"
                                        HorizontalAlignment="Right"
                                        Width="35"
                                        Height="35"
                                        Click="EventDateButton_Click">
                                    <Image Source="{StaticResource DatePickerIcon}"
                                           Width="18"
                                           Height="18"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- НАЗВАНИЕ -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Название:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Top"
                                   Margin="10,0,15,15"/>

                        <TextBox Grid.Row="1" Grid.Column="1"
                                 x:Name="EventNameTextBox"
                                 Style="{StaticResource WrappingTextBoxStyle}"
                                 Background="{StaticResource MenuItemHoverColor}"
                                 Foreground="{StaticResource LightTextColor}"
                                 FontSize="12"
                                 MinHeight="60"
                                 Padding="12"
                                 Margin="0,0,0,15"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="200"/>

                        <!-- УРОВЕНЬ -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Уровень:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,15,15"/>

                        <ComboBox Grid.Row="2" Grid.Column="1"
                                  x:Name="EventLevelComboBox"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}"
                                  Height="35"
                                  FontSize="12"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Город"/>
                            <ComboBoxItem Content="Область"/>
                            <ComboBoxItem Content="Республика"/>
                            <ComboBoxItem Content="Международный"/>
                        </ComboBox>

                        <!-- ВИД -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Вид:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,15,15"/>

                        <ComboBox Grid.Row="3" Grid.Column="1"
                                  x:Name="EventTypeComboBox"
                                  Style="{StaticResource CustomComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource CustomComboBoxItemStyle}"
                                  Height="35"
                                  FontSize="14"
                                  Margin="0,0,0,15">
                            <!-- Заполняется динамически из БД -->
                        </ComboBox>

                        <!-- РЕЗУЛЬТАТ ДЛЯ ВЫБРАННОГО УЧАЩЕГОСЯ -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Результат:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,15,15"/>

                        <Border Grid.Row="4" Grid.Column="1"
                                Background="{StaticResource MenuItemHoverColor}"
                                CornerRadius="8"
                                Height="35"
                                Margin="0,0,0,15">
                            <Grid>
                                <TextBox x:Name="StudentResultTextBox"
                                         Background="{StaticResource MenuItemHoverColor}"
                                         Foreground="{StaticResource LightTextColor}"
                                         BorderThickness="0"
                                         Padding="12,0,42,0"
                                         VerticalAlignment="Center"
                                         FontSize="12"
                                         IsEnabled="False"/>
                                <Button x:Name="AddResultButton"
                                        Style="{StaticResource AddResultButtonStyle}"
                                        HorizontalAlignment="Right"
                                        Width="35"
                                        Height="35"
                                        IsEnabled="False"
                                        Click="AddResultButton_Click">
                                    <Image Source="/Images/addIcon.png"
                                           Width="20"
                                           Height="20"
                                           Stretch="Uniform"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- НОМИНАЦИИ -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Номинации:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Top"
                                   Margin="10,0,15,15"/>

                        <TextBox Grid.Row="5" Grid.Column="1"
                                 x:Name="EventNominationsTextBox"
                                 Style="{StaticResource WrappingTextBoxStyle}"
                                 Background="{StaticResource MenuItemHoverColor}"
                                 Foreground="{StaticResource LightTextColor}"
                                 FontSize="12"
                                 MinHeight="60"
                                 Padding="12"
                                 Margin="0,0,0,15"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="200"/>

                        <!-- МЕСТО ПРОВЕДЕНИЯ -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Text="Место проведения:"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource LightTextColor}"
                                   VerticalAlignment="Top"
                                   Margin="10,0,15,0"/>

                        <TextBox Grid.Row="6" Grid.Column="1"
                                 x:Name="EventLocationTextBox"
                                 Style="{StaticResource WrappingTextBoxStyle}"
                                 Background="{StaticResource MenuItemHoverColor}"
                                 Foreground="{StaticResource LightTextColor}"
                                 FontSize="12"
                                 MinHeight="60"
                                 Padding="12"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 MaxLength="200"/>
                    </Grid>

                    <!-- СПИСОК УЧАСТНИКОВ С РЕЗУЛЬТАТАМИ -->
                    <StackPanel x:Name="ParticipantResultsPanel"
                                Margin="0,10,0,0">
                        <!-- Сюда будут динамически добавляться карточки участников с результатами -->
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ПРАВЫЙ ФРЕЙМ - СПИСОК УЧАЩИХСЯ -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="{StaticResource ReportFrameColor}"
                CornerRadius="8"
                Margin="10,0,20,15"
                Style="{StaticResource HoverFrameStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ШАПКА С ПОИСКОМ И КНОПКОЙ ДОБАВЛЕНИЯ -->
                <Border Grid.Row="0"
                        Background="Transparent"
                        Margin="15,15,15,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- ПОЛЕ ПОИСКА -->
                        <Border Grid.Column="0"
                                Background="{StaticResource MenuItemHoverColor}"
                                CornerRadius="12"
                                Height="35"
                                Margin="0,0,10,0">
                            <Grid>
                                <TextBox x:Name="StudentSearchTextBox"
                                         Style="{StaticResource SearchTextBoxStyle}"
                                         Padding="38,0,10,0"
                                         VerticalAlignment="Center"
                                         Text="Поиск..."
                                         GotFocus="StudentSearchTextBox_GotFocus"
                                         LostFocus="StudentSearchTextBox_LostFocus"
                                         MaxLength="200"/>
                                <Image Source="/Images/searchIcon.png"
                                       Width="20"
                                       Height="20"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"
                                       Stretch="Uniform"/>
                            </Grid>
                        </Border>

                        <!-- КНОПКА ДОБАВИТЬ УЧАЩЕГОСЯ -->
                        <Button Grid.Column="1"
                                Style="{StaticResource FiltersButtonStyle}"
                                Width="56"
                                Height="35"
                                x:Name="AddStudentButton"
                                Click="AddStudentButton_Click">
                            <Image Source="/Images/addIcon.png"
                                   Width="20"
                                   Height="20"
                                   Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- СПИСОК УЧАЩИХСЯ -->
                <ScrollViewer Grid.Row="1"
                              Style="{StaticResource CustomScrollViewerStyle}"
                              Padding="15,0,15,15">
                    <!-- Список учащихся будет заполняться динамически -->
                    <StackPanel x:Name="StudentsList">

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ПОДВАЛ С КНОПКАМИ -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
                Background="Transparent"
                Margin="20,0,20,20"
                Height="60">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <!-- КНОПКА НАЗАД -->
                <Button x:Name="BackButton"
                        Style="{StaticResource PurpleCircleButtonStyle}"
                        Width="35"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="BackButton_Click">
                    <Image Source="/Images/backIcon.png"
                           Width="24"
                           Height="24"
                           Stretch="Uniform"/>
                </Button>

                <!-- КНОПКА СОХРАНИТЬ -->
                <Button x:Name="SaveButton"
                        Style="{StaticResource PurpleCircleButtonStyle}"
                        Width="35"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click">
                    <Image Source="/Images/saveIcon.png"
                           Width="20"
                           Height="20"
                           Stretch="Uniform"/>
                </Button>

                <!-- КНОПКА УДАЛИТЬ -->
                <Button x:Name="DeleteButton"
                        Style="{StaticResource CircleButtonStyle}"
                        Width="36"
                        Height="38"
                        IsEnabled="False"
                        Click="DeleteButton_Click" Cursor="Hand">
                    <Image Source="/Images/iconRemove.png"
                           Width="17"
                           Height="17"
                           Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- КАЛЕНДАРЬ ДЛЯ ДАТЫ -->
        <Popup x:Name="DatePickerPopup"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide"
               VerticalOffset="5">
            <Border Background="{StaticResource CalendarBackground}"
                    BorderBrush="{StaticResource AccentColor}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="8">
                <Calendar x:Name="DatePickerCalendar"
                          Style="{StaticResource CustomCalendarStyle}"
                          SelectionMode="SingleDate"
                          SelectedDatesChanged="DatePickerCalendar_SelectedDatesChanged"/>
            </Border>
        </Popup>
    </Grid>
</Page>