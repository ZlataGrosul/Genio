<Application x:Class="Genio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Genio"
             StartupUri="MainWindow.xaml">

    <Application.Resources>

        <ResourceDictionary>

            <!-- ЦВЕТА -->
            <SolidColorBrush x:Key="MenuBackgroundColor" Color="#FF303030"/>
            <SolidColorBrush x:Key="MenuSelectedColor" Color="#FF787878"/>
            <SolidColorBrush x:Key="MenuTextColor" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="WindowBackground" Color="#262626"/>
            <SolidColorBrush x:Key="MenuItemHoverColor" Color="#FF404040"/>

            <!-- ЦВЕТА ДЛЯ ОТЧЕТОВ -->
            <SolidColorBrush x:Key="ReportFrameColor" Color="#FF303030"/>
            <SolidColorBrush x:Key="AccentColor" Color="#FF6155F5"/>
            <SolidColorBrush x:Key="IconGrayColor" Color="#FF8E8E93"/>
            <SolidColorBrush x:Key="LightTextColor" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="CheckBoxBorder" Color="#FF787878"/>
            <SolidColorBrush x:Key="CheckBoxChecked" Color="#FF6155F5"/>
            <SolidColorBrush x:Key="DisabledButtonColor" Color="#FF505050"/>
            <SolidColorBrush x:Key="ComboBoxInnerColor" Color="#FF505050"/>
            <SolidColorBrush x:Key="ComboBoxTextColor" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="CalendarBackground" Color="#FF505050"/>
            <SolidColorBrush x:Key="CalendarHeaderBackground" Color="#FF505050"/>
            <SolidColorBrush x:Key="CalendarDayBackground" Color="Transparent"/>
            <SolidColorBrush x:Key="CalendarDayHover" Color="#FF505050"/>
            <SolidColorBrush x:Key="CalendarToday" Color="#FF404040"/>

            <!-- ШРИФТЫ -->
            <FontFamily x:Key="PrimaryFont">Segoe UI</FontFamily>

            <!-- ПУТИ К ИКОНКАМ -->
            <BitmapImage x:Key="AnalyticsIcon" UriSource="/Images/iconsMenu/analytics_icon.png"/>
            <BitmapImage x:Key="ReportsIcon" UriSource="/Images/iconsMenu/reports_icon.png"/>
            <BitmapImage x:Key="OlympiadsIcon" UriSource="/Images/iconsMenu/olympiads_icon.png"/>
            <BitmapImage x:Key="HonorBoardIcon" UriSource="/Images/iconsMenu/honorboard_icon.png"/>
            <BitmapImage x:Key="SettingsIcon" UriSource="/Images/iconsMenu/settings_icon.png"/>
            <BitmapImage x:Key="DatePickerIcon" UriSource="\Images\datePicker_icon.png"/>

            <!-- ПУНКТ МЕНЮ -->
            <Style x:Key="MenuButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{StaticResource MenuTextColor}"/>
                <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="IsChecked" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="menuItemBorder"
                                    CornerRadius="10"
                                    Background="Transparent"
                                    Padding="15,6,15,6" 
                                Margin="0,3">
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <Image x:Name="menuIcon"
                                           Width="24"
                                           Height="24"
                                           Source="{TemplateBinding Tag}"
                                           Margin="0,0,10,0"
                                           Stretch="Uniform"/>
                                    <TextBlock x:Name="menuText"
                                               Text="{TemplateBinding Content}"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <!-- выбор пункта меню -->
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="menuItemBorder" 
                                            Property="Background" 
                                            Value="{StaticResource MenuSelectedColor}"/>
                                    <Setter TargetName="menuText" 
                                            Property="FontWeight" 
                                            Value="SemiBold"/>
                                    <Setter TargetName="menuItemBorder" 
                                            Property="Padding" 
                                            Value="15,6,15,6"/>
                                </Trigger>

                                <!-- при наведении мыши -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="menuItemBorder" 
                                            Property="Background" 
                                            Value="{StaticResource MenuItemHoverColor}"/>
                                    <Setter TargetName="menuItemBorder" 
                                            Property="Padding" 
                                            Value="15,6,15,6"/>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsChecked" Value="True"/>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="menuItemBorder" 
                                            Property="Padding" 
                                            Value="15,6,15,6"/>
                                    <Setter TargetName="menuItemBorder" 
                                            Property="Background" 
                                            Value="#FF686868"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ ФРЕЙМОВ -->
            <Style x:Key="HoverFrameStyle" TargetType="Border">
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- СТИЛЬ ДЛЯ КНОПОК (фиолетовых) -->
            <Style x:Key="AccentButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15"
                        BorderThickness="0">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="10,8"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF5045D5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF4035C5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КНОПОК (серых) -->
            <Style x:Key="DisabledButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource DisabledButtonColor}"/>
                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Arrow"/>
                <Setter Property="Opacity" Value="0.7"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15"
                        BorderThickness="0">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="10,8"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КРУГЛЫХ КНОПОК -->
            <Style x:Key="CircleButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource IconGrayColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="18"
                        Width="36"
                        Height="36"
                        BorderThickness="0">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF9E9EA3"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFAEAEB3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ COMBOBOX -->
            <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
                <Setter Property="Background" Value="{StaticResource ComboBoxInnerColor}"/>
                <Setter Property="Foreground" Value="{StaticResource ComboBoxTextColor}"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="10,0,10,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ContentPresenter для отображения выбранного значения -->
                                        <ContentPresenter x:Name="contentPresenter"
                                              Grid.Column="0"
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"
                                              Margin="10,0,5,0"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>

                                        <ToggleButton x:Name="toggleButton" 
                                          Grid.Column="1" 
                                          Focusable="false"
                                          Width="30"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                            <ToggleButton.Template>
                                                <ControlTemplate>
                                                    <Border Background="Transparent">
                                                        <Path x:Name="arrow"
                                                  Fill="{StaticResource LightTextColor}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                    </Grid>
                                </Border>
                                <Popup x:Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           VerticalOffset="1"
                           MinWidth="{Binding ActualWidth, ElementName=border}">
                                    <Border x:Name="DropDownBorder"
                                Background="{StaticResource ComboBoxInnerColor}"
                                CornerRadius="8"
                                BorderThickness="1"
                                BorderBrush="{StaticResource AccentColor}">
                                        <ScrollViewer MaxHeight="200">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ РАДИО-КНОПОК -->
            <Style x:Key="CourseRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,20,0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ВНЕШНИЙ КРУГ -->
                                <Ellipse x:Name="outerEllipse"
                            Grid.Column="0"
                            Width="20"
                            Height="20"
                            Stroke="{StaticResource CheckBoxBorder}"
                            StrokeThickness="2"
                            Fill="Transparent"
                            Margin="0,0,10,0"/>

                                <!-- ВНУТРЕННИЙ КРУГ -->
                                <Ellipse x:Name="innerEllipse"
                            Grid.Column="0"
                            Width="10"
                            Height="10"
                            Fill="Transparent"
                            Margin="5,5,15,5"/>

                                <TextBlock Grid.Column="1"
                            Text="{TemplateBinding Content}"
                            Foreground="{TemplateBinding Foreground}"
                            VerticalAlignment="Center"
                            TextTrimming="CharacterEllipsis"/>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="innerEllipse" 
                            Property="Fill" 
                            Value="{StaticResource CheckBoxChecked}"/>
                                    <Setter TargetName="outerEllipse" 
                            Property="Stroke" 
                            Value="{StaticResource CheckBoxChecked}"/>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outerEllipse" 
                            Property="Stroke" 
                            Value="{StaticResource CheckBoxChecked}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ COMBOBOX ITEM -->
            <Style x:Key="CustomComboBoxItemStyle" TargetType="ComboBoxItem">
                <Setter Property="Background" Value="{StaticResource ComboBoxInnerColor}"/>
                <Setter Property="Foreground" Value="{StaticResource ComboBoxTextColor}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBoxItem">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Padding="10,8">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF686868"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ CHECKBOX -->
            <Style x:Key="ReportCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border x:Name="outerBorder"
                            Grid.Column="0"
                            Width="20"
                            Height="20"
                            CornerRadius="4"
                            BorderBrush="{StaticResource CheckBoxBorder}"
                            BorderThickness="2"
                            Background="Transparent"
                            Margin="0,0,10,0"/>

                                <Border x:Name="innerBorder"
                            Grid.Column="0"
                            Width="12"
                            Height="12"
                            CornerRadius="2"
                            Background="Transparent"
                            Margin="4,4,14,4"/>

                                <TextBlock Grid.Column="1"
                            Text="{TemplateBinding Content}"
                            Foreground="{TemplateBinding Foreground}"
                            VerticalAlignment="Center"
                            TextTrimming="CharacterEllipsis"/>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="innerBorder" 
                                Property="Background" 
                                Value="{StaticResource CheckBoxChecked}"/>
                                    <Setter TargetName="outerBorder" 
                                Property="BorderBrush" 
                                Value="{StaticResource CheckBoxChecked}"/>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outerBorder" 
                                Property="BorderBrush" 
                                Value="{StaticResource CheckBoxChecked}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КАЛЕНДАРЯ -->
            <Style x:Key="CustomCalendarDayButtonStyle" TargetType="CalendarDayButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CalendarDayButton">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5"
                                    Margin="1">
                                <ContentPresenter x:Name="ContentPresenter"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource CalendarDayHover}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                                </Trigger>
                                <Trigger Property="IsToday" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource CalendarToday}"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter TargetName="Border" Property="Background" Value="#FF5045D5"/>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="CustomCalendarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{StaticResource AccentColor}"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="5,3">
                                <ContentPresenter x:Name="ContentPresenter"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource CalendarDayHover}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- УПРОЩЕННЫЙ КАЛЕНДАРЬ -->
            <Style x:Key="CustomCalendarStyle" TargetType="Calendar">
                <Setter Property="Background" Value="{StaticResource CalendarBackground}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="CalendarDayButtonStyle" Value="{StaticResource CustomCalendarDayButtonStyle}"/>
            </Style>

            <Style x:Key="DayTitleStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="2"/>
            </Style>

            <!-- Стиль для кнопок выбора даты -->
            <Style x:Key="DatePickerButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="Transparent"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="Transparent">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КНОПОК ПЕРЕКЛЮЧАТЕЛЯ РЕЖИМА -->
            <Style x:Key="ModeToggleButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border"
                        Background="Transparent"
                        Padding="0,5">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ ПОИСКОВОГО ПОЛЯ -->
            <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- СТИЛЬ ДЛЯ КНОПКИ ФИЛЬТРОВ -->
            <Style x:Key="FiltersButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource MenuItemHoverColor}"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderThickness="0"
                        CornerRadius="12">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF505050"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ АКТИВНОЙ КНОПКИ ФИЛЬТРОВ -->
            <Style x:Key="FiltersButtonActiveStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{StaticResource AccentColor}"
                        BorderThickness="2"
                        BorderBrush="{StaticResource AccentColor}"
                        CornerRadius="12">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF5045D5"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF5045D5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF4035C5"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF4035C5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ ФИОЛЕТОВЫХ КРУГЛЫХ КНОПОК -->
            <Style x:Key="PurpleCircleButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="ellipse"
                             Fill="{TemplateBinding Background}"/>
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ellipse" Property="Fill" Value="#FF5045D5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ellipse" Property="Fill" Value="#FF4035C5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КНОПКИ ОТЧЕТ -->
            <Style x:Key="ReportButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="10,8"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF5045D5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF4035C5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КАСТОМНОГО SCROLLVIEWER -->
            <Style x:Key="CustomScrollViewerStyle" TargetType="ScrollViewer">
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                </Grid.ColumnDefinitions>

                                <!-- ОСНОВНОЙ КОНТЕНТ -->
                                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                    Grid.Column="0"
                    Margin="{TemplateBinding Padding}"
                    CanContentScroll="{TemplateBinding CanContentScroll}"/>

                                <!-- ВЕРТИКАЛЬНЫЙ СКРОЛЛБАР -->
                                <ScrollBar x:Name="PART_VerticalScrollBar"
                   Grid.Column="1"
                   Orientation="Vertical"
                   Minimum="0"
                   Maximum="{TemplateBinding ScrollableHeight}"
                   ViewportSize="{TemplateBinding ViewportHeight}"
                   Value="{TemplateBinding VerticalOffset}"
                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                   Width="12"
                   Margin="-14,0,0,0">
                                    <ScrollBar.Template>
                                        <ControlTemplate TargetType="ScrollBar">
                                            <Grid>
                                                <!-- ТРЕК (серый фон полосы прокрутки) -->
                                                <Border x:Name="TrackBorder"
                                CornerRadius="9"
                                Background="{StaticResource CheckBoxBorder}"
                                Opacity="0.3"
                                Margin="2,10,2,10"/>

                                                <!-- Трек с ползунком -->
                                                <Track x:Name="PART_Track" 
                                           IsDirectionReversed="true"
                                           Margin="0,10,0,10">
                                                    <Track.Thumb>
                                                        <Thumb x:Name="Thumb" 
                                       Background="{StaticResource AccentColor}"
                                       Width="6"
                                                   MaxHeight="200"
                                                Margin="3,0,3,0">
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border CornerRadius="4"
                                                            Background="{TemplateBinding Background}"
                                                    Margin="0,2,0,2"/>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Thumb" Property="Background" Value="#FF5045D5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ScrollBar.Template>
                                </ScrollBar>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Стиль для кнопки выбора учащегося -->
            <Style x:Key="StudentSelectionButtonStyle" TargetType="Button" BasedOn="{StaticResource DatePickerButtonStyle}">
                <Setter Property="Width" Value="27"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Стиль для выбранного учащегося -->
            <Style x:Key="SelectedStudentItemStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="CornerRadius" Value="9"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Margin" Value="0,0,0,7"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Стиль для не выбранного учащегося -->
            <Style x:Key="UnselectedStudentItemStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CalendarDayHover}"/>
                <Setter Property="CornerRadius" Value="9"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Margin" Value="0,0,0,7"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <Style x:Key="WrappingTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource SearchTextBoxStyle}">
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="AcceptsReturn" Value="True"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="VerticalContentAlignment" Value="Top"/>
            </Style>

            <!-- Стиль для карточек мероприятий -->
            <Style x:Key="EventCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CalendarDayHover}"/>
                <Setter Property="CornerRadius" Value="9"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Margin" Value="0,0,0,7"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Tag" Value="{Binding olimp_id}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Стиль для выбранной карточки мероприятия -->
            <Style x:Key="SelectedEventCardStyle" TargetType="Border" BasedOn="{StaticResource EventCardStyle}">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            </Style>

            <!-- ЦВЕТА ДЛЯ КАРТОЧЕК УЧАЩИХСЯ -->
            <Color x:Key="StudentCardColor1">#FF6155F5</Color>
            <Color x:Key="StudentCardColor2">#FF978FFF</Color>
            <Color x:Key="StudentCardColor3">#FF4F47B7</Color>
            <Color x:Key="StudentCardColor4">#FF6B5FDD</Color>
            <Color x:Key="StudentCardColor5">#FF8579F7</Color>

            <SolidColorBrush x:Key="StudentCardBrush1" Color="{StaticResource StudentCardColor1}"/>
            <SolidColorBrush x:Key="StudentCardBrush2" Color="{StaticResource StudentCardColor2}"/>
            <SolidColorBrush x:Key="StudentCardBrush3" Color="{StaticResource StudentCardColor3}"/>
            <SolidColorBrush x:Key="StudentCardBrush4" Color="{StaticResource StudentCardColor4}"/>
            <SolidColorBrush x:Key="StudentCardBrush5" Color="{StaticResource StudentCardColor5}"/>

            <!-- СТИЛЬ ДЛЯ КАРТОЧЕК УЧАЩИХСЯ С ЦВЕТАМИ -->
            <Style x:Key="StudentCardColoredStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="9"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Margin" Value="0,0,0,7"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Tag" Value="{Binding student_id}"/>
                <Setter Property="Background" Value="{StaticResource StudentCardBrush1}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Стиль для текста в карточках -->
            <Style x:Key="CardTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="10,0,10,0"/>
            </Style>

            <!-- СТИЛЬ ДЛЯ ВЫБРАННОЙ КАРТОЧКИ СТУДЕНТА -->
            <Style x:Key="SelectedStudentCardStyle" TargetType="Border" BasedOn="{StaticResource StudentCardColoredStyle}">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Style>

            <!-- СТИЛЬ ДЛЯ НЕВЫБРАННОЙ КАРТОЧКИ СТУДЕНТА -->
            <Style x:Key="UnselectedStudentCardStyle" TargetType="Border" BasedOn="{StaticResource StudentCardColoredStyle}">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Стиль для результата участника -->
            <Style x:Key="ParticipantResultItemStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CalendarDayHover}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <!-- Стиль для кнопки добавления результата -->
            <Style x:Key="AddResultButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="Transparent"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="Transparent">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ ЗАГОЛОВКА "ДОСКА ПОЧЕТА" -->
            <Style x:Key="HonorBoardTitleStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- СТИЛЬ ДЛЯ ТАБЛИЦЫ ДОСКИ ПОЧЕТА (ОБНОВЛЕННЫЙ С ЗАКРУГЛЕННЫМИ КРАЯМИ) -->
            <Style x:Key="HonorBoardTableStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="#404040"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="RowBackground" Value="#404040"/>
                <Setter Property="AlternatingRowBackground" Value="#505050"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="HorizontalGridLinesBrush" Value="#787878"/>
                <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="CanUserReorderColumns" Value="False"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
                <Setter Property="CanUserResizeRows" Value="False"/>
                <Setter Property="CanUserSortColumns" Value="True"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="SelectionUnit" Value="FullRow"/>
                <Setter Property="RowHeight" Value="35"/>
                <Setter Property="FontSize" Value="13"/>

                <Setter Property="CellStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#787878"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>

                <Setter Property="ColumnHeaderStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#303030"/>
                            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="BorderBrush" Value="#787878"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#404040"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>

                <Setter Property="RowStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#505050"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КНОПКИ ОЧИСТКИ ФИЛЬТРОВ -->
            <Style x:Key="ClearFilterButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource IconGrayColor}"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="38"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="18"
                        BorderThickness="0">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF9E9EA3"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFAEAEB3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- СТИЛЬ ДЛЯ КНОПКИ ЭКСПОРТА В EXCEL -->
            <Style x:Key="ExcelExportButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="MinWidth" Value="120"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15"
                        BorderThickness="0">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="10,8"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF5045D5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF4035C5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Стиль для кнопки редактирования -->
            <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource CircleButtonStyle}">
                <Setter Property="Width" Value="27"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Margin" Value="0,0,5,0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Стиль для кнопки удаления -->
            <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource CircleButtonStyle}">
                <Setter Property="Width" Value="27"/>
                <Setter Property="Height" Value="27"/>
                <Setter Property="Margin" Value="5,0,0,0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>