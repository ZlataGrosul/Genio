<Page x:Class="Genio.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      Title="SettingsPage"
      Background="{StaticResource WindowBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ЗАГОЛОВОК -->
        <TextBlock Grid.Row="0"
                   Text="Настройки"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource LightTextColor}"
                   Margin="30,15,20,20"
                   HorizontalAlignment="Left"/>

        <!-- ОСНОВНОЙ КОНТЕНТ -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ЛЕВЫЙ ФРЕЙМ - СПЕЦИАЛЬНОСТИ -->
            <Border Grid.Column="0"
                    Background="{StaticResource ReportFrameColor}"
                    CornerRadius="8"
                    Style="{StaticResource HoverFrameStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ЗАГОЛОВОК СПЕЦИАЛЬНОСТИ -->
                    <TextBlock Grid.Row="0"
                               Text="Специальности"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource LightTextColor}"
                               Margin="15,15,15,10"
                               HorizontalAlignment="Left"/>

                    <!-- ПОЛЕ ДЛЯ ДОБАВЛЕНИЯ НОВОЙ СПЕЦИАЛЬНОСТИ -->
                    <Border Grid.Row="1"
                            Background="Transparent"
                            Margin="15,0,15,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ПОЛЕ ВВОДА -->
                            <TextBox x:Name="SpecialtyTextBox"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     Background="{StaticResource MenuItemHoverColor}"
                                     Foreground="{StaticResource LightTextColor}"
                                     FontSize="12"
                                     Padding="7"
                                     Height="35"
                                     MaxLength="100"
                                     VerticalContentAlignment="Center"/>

                            <!-- КНОПКА ДОБАВЛЕНИЯ -->
                            <Button x:Name="AddSpecialtyButton"
                                    Grid.Column="1"
                                    Style="{StaticResource CircleButtonStyle}"
                                    Width="36"
                                    Height="36"
                                    Margin="10,0,0,0"
                                    Click="AddSpecialtyButton_Click">
                                <Image Source="/Images/addIcon.png"
                                       Width="18"
                                       Height="18"
                                       Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- СПИСОК СПЕЦИАЛЬНОСТЕЙ -->
                    <ScrollViewer Grid.Row="2"
                                  Style="{StaticResource CustomScrollViewerStyle}"
                                  Padding="15,0,15,15">
                        <StackPanel x:Name="SpecialtiesList">
                            <!-- Список будет заполняться динамически -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- РАЗДЕЛИТЕЛЬ -->
            <Border Grid.Column="1" Background="Transparent"/>

            <!-- ПРАВЫЙ ФРЕЙМ - ВИДЫ МЕРОПРИЯТИЙ -->
            <Border Grid.Column="2"
                    Background="{StaticResource ReportFrameColor}"
                    CornerRadius="8"
                    Style="{StaticResource HoverFrameStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ЗАГОЛОВОК ВИДЫ МЕРОПРИЯТИЙ -->
                    <TextBlock Grid.Row="0"
                               Text="Виды мероприятий"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource LightTextColor}"
                               Margin="15,15,15,10"
                               HorizontalAlignment="Left"/>

                    <!-- ПОЛЕ ДЛЯ ДОБАВЛЕНИЯ НОВОГО ВИДА МЕРОПРИЯТИЙ -->
                    <Border Grid.Row="1"
                            Background="Transparent"
                            Margin="15,0,15,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ПОЛЕ ВВОДА -->
                            <TextBox x:Name="EventTypeTextBox"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     Background="{StaticResource MenuItemHoverColor}"
                                     Foreground="{StaticResource LightTextColor}"
                                     FontSize="12"
                                     Padding="7"
                                     Height="35"
                                     MaxLength="100"
                                     VerticalContentAlignment="Center"/>

                            <!-- КНОПКА ДОБАВЛЕНИЯ -->
                            <Button x:Name="AddEventTypeButton"
                                    Grid.Column="1"
                                    Style="{StaticResource CircleButtonStyle}"
                                    Width="36"
                                    Height="36"
                                    Margin="10,0,0,0"
                                    Click="AddEventTypeButton_Click">
                                <Image Source="/Images/addIcon.png"
                                       Width="18"
                                       Height="18"
                                       Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- СПИСОК ВИДОВ МЕРОПРИЯТИЙ -->
                    <ScrollViewer Grid.Row="2"
                                  Style="{StaticResource CustomScrollViewerStyle}"
                                  Padding="15,0,15,15">
                        <StackPanel x:Name="EventTypesList">
                            <!-- Список будет заполняться динамически -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>