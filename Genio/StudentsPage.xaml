<Page x:Class="Genio.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      Title="StudentsPage"
      Background="{StaticResource WindowBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="Transparent"
                Margin="20,10,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ПОЛЕ ПОИСКА -->
                <Border Grid.Column="0"
                        Background="{StaticResource ReportFrameColor}"
                        CornerRadius="12"
                        Width="318"
                        Height="38"
                        Margin="0,0,15,0">
                    <Grid>
                        <TextBox x:Name="SearchTextBox"
                                 Style="{StaticResource SearchTextBoxStyle}"
                                 Padding="38,0,10,0"
                                 VerticalAlignment="Center"
                                 Text="Поиск..."
                                 GotFocus="SearchTextBox_GotFocus"
                                 LostFocus="SearchTextBox_LostFocus"/>
                        <Image Source="/Images/searchIcon.png"
                               Width="20"
                               Height="20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               Stretch="Uniform"/>
                    </Grid>
                </Border>

                <!-- КНОПКА ФИЛЬТРОВ -->
                <Button x:Name="FiltersBtn"
                        Grid.Column="1"
                        Style="{StaticResource FiltersButtonStyle}"
                        Width="56"
                        Height="38"
                        HorizontalAlignment="Left"
                        Click="FiltersBtn_Click">
                    <Image Source="/Images/filterIcon.png"
                           Width="20"
                           Height="20"
                           Stretch="Uniform"/>
                </Button>

                <!-- ПЕРЕКЛЮЧАТЕЛЬ УЧАЩИЕСЯ/МЕРОПРИЯТИЯ -->
                <Border Grid.Column="1"
                        Background="{StaticResource ReportFrameColor}"
                        CornerRadius="12"
                        Width="251"
                        Height="38"
                        Margin="80,0,15,0"
                        HorizontalAlignment="Left">
                    <Grid>
                        <!-- Сначала фиолетовый фрейм -->
                        <Border x:Name="ModeSelector"
                                Background="{StaticResource AccentColor}"
                                CornerRadius="8"
                                Width="121"
                                Height="28"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="2,0,0,0"/>

                        <!-- Потом кнопки -->
                        <RadioButton x:Name="StudentsModeBtn"
                                     Content="Учащиеся"
                                     GroupName="ViewMode"
                                     IsChecked="True"
                                     Style="{StaticResource ModeToggleButtonStyle}"
                                     HorizontalAlignment="Left"
                                     Width="121"
                                     Click="ViewMode_Checked"/>
                        <RadioButton x:Name="EventsModeBtn"
                                     Content="Мероприятия"
                                     GroupName="ViewMode"
                                     Style="{StaticResource ModeToggleButtonStyle}"
                                     HorizontalAlignment="Right"
                                     Width="121"
                                     Click="ViewMode_Checked"/>
                    </Grid>
                </Border>

                <!-- КНОПКА ОТЧЕТ -->
                <Button x:Name="ReportBtn"
                        Grid.Column="2"
                        Style="{StaticResource ReportButtonStyle}"
                        Width="120"
                        Height="38"
                        HorizontalAlignment="Right"
                        Click="ReportBtn_Click">
                    <TextBlock Text="Отчет"/>
                </Button>
            </Grid>
        </Border>

        <!-- МЕСТО ПОД ШАПКОЙ -->
        <Border Grid.Row="1" Grid.ColumnSpan="2"
                Height="15"
                Background="Transparent"/>

        <!-- ЗАГОЛОВКИ РАЗДЕЛОВ -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Учащиеся"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource LightTextColor}"
                   Margin="30,0,20,10"
                   HorizontalAlignment="Left"/>

        <TextBlock x:Name="RightSectionTitle"
                   Grid.Row="2" Grid.Column="1"
                   Text="Мероприятия учащегося"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource LightTextColor}"
                   Margin="20,0,20,10"
                   HorizontalAlignment="Left"/>

        <!-- ЛЕВЫЙ ФРЕЙМ - СПИСОК УЧАЩИХСЯ -->
        <Border Grid.Row="3" Grid.Column="0"
                Background="{StaticResource ReportFrameColor}"
                CornerRadius="8"
                Margin="20,0,10,15"
                Style="{StaticResource HoverFrameStyle}">
            <ScrollViewer Style="{StaticResource CustomScrollViewerStyle}"
                          Padding="15">
                <!-- Список учащихся будет заполняться динамически -->
                <StackPanel x:Name="StudentsList">

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ПРАВЫЙ ФРЕЙМ - СПИСОК МЕРОПРИЯТИЙ -->
        <Border x:Name="EventsSection"
                Grid.Row="3" Grid.Column="1"
                Background="{StaticResource ReportFrameColor}"
                CornerRadius="8"
                Margin="10,0,20,15"
                Style="{StaticResource HoverFrameStyle}">
            <ScrollViewer Style="{StaticResource CustomScrollViewerStyle}"
                          Padding="15">
                <!-- Список мероприятий учащегося -->
                <StackPanel x:Name="EventsList">

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- РАЗДЕЛ ИНФОРМАЦИИ ОБ УЧАЩЕМСЯ -->
        <Border x:Name="StudentInfoSection"
                Grid.Row="3" Grid.Column="1"
                Background="{StaticResource ReportFrameColor}"
                CornerRadius="8"
                Margin="10,0,20,15"
                Visibility="Collapsed"
                Style="{StaticResource HoverFrameStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ИНФОРМАЦИЯ ОБ УЧАЩЕМСЯ -->
                <ScrollViewer Grid.Row="1"
                              Style="{StaticResource CustomScrollViewerStyle}"
                              Padding="15,0,15,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ЛЕВАЯ КОЛОНКА - МЕТКИ -->
                        <StackPanel Grid.Column="0" Margin="10,20,30,0">
                            <TextBlock Text="ФИО:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Дата рождения:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Курс:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Группа:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Специальность:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Дата поступления:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Дата окончания:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Телефон:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Домашний телефон:"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource LightTextColor}"
                                       Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- ПРАВАЯ КОЛОНКА - ЗНАЧЕНИЯ -->
                        <StackPanel Grid.Column="1" Margin="20">
                            <TextBlock x:Name="StudentNameValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="StudentBirthDateValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentCourseValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentGroupValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentSpecializationValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentAdmissionDateValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentGraduationDateValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentPhoneValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,15"/>
                            <TextBlock x:Name="StudentHomePhoneValue"
                                       FontSize="14"
                                       Foreground="#FFCCCCCC"
                                       Margin="0,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- КНОПКА НАЗАД -->
                <Button Grid.Row="2"
                        Style="{StaticResource CircleButtonStyle}"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,15,15"
                        Click="BackButton_Click">
                    <Image Source="/Images/backIcon.png"
                           Width="24"
                           Height="24"
                           Stretch="Uniform"/>
                </Button>
            </Grid>
        </Border>

        <!-- ПАНЕЛЬ ФИЛЬТРОВ -->
        <Border x:Name="FiltersPanel"
                Grid.Row="3" Grid.Column="1"
                Background="{StaticResource ReportFrameColor}"
                CornerRadius="10"
                Margin="10,0,20,15"
                Height="235"
                VerticalAlignment="Bottom"
                Visibility="Collapsed"
                Style="{StaticResource HoverFrameStyle}">
            <ScrollViewer Style="{StaticResource CustomScrollViewerStyle}"
                          Padding="15">
                <StackPanel>
                    <!-- ЗАГОЛОВОК ФИЛЬТРОВ -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,15">
                        <Image Source="/Images/filterIcon.png"
                               Width="20"
                               Height="20"
                               Stretch="Uniform"
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Фильтры"
                                   Foreground="{StaticResource LightTextColor}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- РАСПОЛОЖЕНИЕ КАК НА ФОТО: СЛЕВА СПЕЦИАЛЬНОСТИ, СПРАВА КУРСЫ -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ФРЕЙМ СПЕЦИАЛЬНОСТИ -->
                        <Border Grid.Column="0"
                                Background="{StaticResource ReportFrameColor}"
                                CornerRadius="8"
                                Padding="18"
                                Margin="0,0,8,0"
                                Style="{StaticResource HoverFrameStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Специальность"
                                           Grid.Row="0"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource LightTextColor}"
                                           Margin="0,0,0,10"/>

                                <!-- УБРАЛИ ScrollViewer ОТСЮДА -->
                                <StackPanel Grid.Row="1"
                                            x:Name="SpecializationFilters">
                                    <!-- Чекбоксы специальностей будут добавлены динамически -->
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- ФРЕЙМ КУРСЫ -->
                        <Border Grid.Column="1"
                                Background="{StaticResource ReportFrameColor}"
                                CornerRadius="8"
                                Padding="18"
                                Margin="8,0,0,0"
                                Style="{StaticResource HoverFrameStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Курс"
                                           Grid.Row="0"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource LightTextColor}"
                                           Margin="0,0,0,10"/>

                                <StackPanel Grid.Row="1">
                                    <CheckBox x:Name="Course1" Content="1 курс" 
                                              Margin="0,0,0,10"
                                              Style="{StaticResource ReportCheckBoxStyle}"
                                              FontSize="12"
                                              Checked="CourseCheckBox_Changed"
                                              Unchecked="CourseCheckBox_Changed"/>
                                    <CheckBox x:Name="Course2" Content="2 курс" 
                                              Margin="0,0,0,10"
                                              Style="{StaticResource ReportCheckBoxStyle}"
                                              FontSize="12"
                                              Checked="CourseCheckBox_Changed"
                                              Unchecked="CourseCheckBox_Changed"/>
                                    <CheckBox x:Name="Course3" Content="3 курс" 
                                              Margin="0,0,0,10"
                                              Style="{StaticResource ReportCheckBoxStyle}"
                                              FontSize="12"
                                              Checked="CourseCheckBox_Changed"
                                              Unchecked="CourseCheckBox_Changed"/>
                                    <CheckBox x:Name="Course4" Content="4 курс"
                                              Style="{StaticResource ReportCheckBoxStyle}"
                                              FontSize="12"
                                              Checked="CourseCheckBox_Changed"
                                              Unchecked="CourseCheckBox_Changed"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ПОДВАЛ С КНОПКАМИ -->
        <Border Grid.Row="4" Grid.ColumnSpan="2"
                Background="Transparent"
                Margin="20,0,20,20"
                Height="60">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <!-- КНОПКА ДОБАВИТЬ -->
                <Button Style="{StaticResource PurpleCircleButtonStyle}"
                        Width="35"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="AddButton_Click">
                    <Image Source="/Images/addIcon.png"
                           Width="24"
                           Height="24"
                           Stretch="Uniform"/>
                </Button>

                <!-- КНОПКА РЕДАКТИРОВАТЬ -->
                <Button Style="{StaticResource PurpleCircleButtonStyle}"
                        Width="35"
                        Height="35"
                        Click="EditButton_Click">
                    <Image Source="/Images/editIcon.png"
                           Width="17"
                           Height="17"
                           Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>